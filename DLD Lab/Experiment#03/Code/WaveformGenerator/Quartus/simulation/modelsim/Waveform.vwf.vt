`timescale 1 ps/ 1 ps
module WaveformGenerator_vlg_sample_tst(
	clk,
	func,
	rst,
	select,
	sampler_tx
);
input  clk;
input [2:0] func;
input  rst;
input  select;
output sampler_tx;

reg sample;
time current_time;
always @(clk or func or rst or select)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

