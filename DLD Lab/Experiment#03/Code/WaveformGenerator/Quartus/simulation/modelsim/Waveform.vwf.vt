module WaveformGenerator_vlg_vec_tst();
// constants                                           
// general purpose registers
reg clk;
reg [2:0] func;
reg rst;
reg select;
// wires                                               
wire [7:0] result;

wire sampler;                             

// assign statements (if any)                          
WaveformGenerator i1 (
// port map - connection between master ports and signals/registers   
	.clk(clk),
	.func(func),
	.result(result),
	.rst(rst),
	.select(select)
);

// rst
initial
begin
	rst = 1'b0;
	rst = #8000 1'b1;
	rst = #40000 1'b0;
end 

// select
initial
begin
	select = 1'b1;
end 
// func[ 2 ]
initial
begin
	func[2] = 1'b0;
end 
// func[ 1 ]
initial
begin
	func[1] = 1'b0;
end 
// func[ 0 ]
initial
begin
	func[0] = 1'b0;
end 

// clk
always
begin
	clk = 1'b0;
	clk = #5000 1'b1;
	#5000;
end 

WaveformGenerator_vlg_sample_tst tb_sample (
	.clk(clk),
	.func(func),
	.rst(rst),
	.select(select),
	.sampler_tx(sampler)
);

WaveformGenerator_vlg_check_tst tb_out(
	.result(result),
